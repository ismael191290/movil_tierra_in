<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.integra.tierra.SubCategoriaActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" >

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblCerrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/lbl_cerrar"
                    android:background="@color/colorBtnSOS"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <TextView
                    android:textColor="@android:color/white"
                    android:layout_weight="2"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/lblEncabezado"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgOrder"
                    app:srcCompat="@android:drawable/ic_menu_sort_alphabetically"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_sub_categoria" />



</android.support.design.widget.CoordinatorLayout>
